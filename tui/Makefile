# SassyShell TUI Makefile

BINARY_NAME=sassysh-tui
BUILD_DIR=build
INSTALL_DIR=$(HOME)/.local/bin

.PHONY: all build clean install uninstall test deps help

# Default target
all: build

# Build the binary
build:
	@echo "üî® Building $(BINARY_NAME)..."
	@mkdir -p $(BUILD_DIR)
	go build -o $(BUILD_DIR)/$(BINARY_NAME) .
	@echo "‚úÖ Build complete: $(BUILD_DIR)/$(BINARY_NAME)"

# Install dependencies
deps:
	@echo "üì¶ Installing dependencies..."
	go mod tidy
	go mod download
	@echo "‚úÖ Dependencies installed"

# Clean build artifacts
clean:
	@echo "üßπ Cleaning build artifacts..."
	rm -rf $(BUILD_DIR)
	go clean
	@echo "‚úÖ Clean complete"

# Install binary to user's local bin
install: build
	@echo "üì• Installing $(BINARY_NAME) to $(INSTALL_DIR)..."
	@mkdir -p $(INSTALL_DIR)
	cp $(BUILD_DIR)/$(BINARY_NAME) $(INSTALL_DIR)/
	@echo "‚úÖ Installation complete"
	@echo "üí° Add $(INSTALL_DIR) to your PATH if not already added"
	@echo "üöÄ Run: $(BINARY_NAME) setup"

# Uninstall binary
uninstall:
	@echo "üóëÔ∏è  Uninstalling $(BINARY_NAME)..."
	rm -f $(INSTALL_DIR)/$(BINARY_NAME)
	@echo "‚úÖ Uninstall complete"

# Run tests
test:
	@echo "üß™ Running tests..."
	go test ./...
	@echo "‚úÖ Tests complete"

# Development build (with race detection)
dev:
	@echo "üîß Building development version..."
	go build -race -o $(BUILD_DIR)/$(BINARY_NAME)-dev .
	@echo "‚úÖ Development build complete: $(BUILD_DIR)/$(BINARY_NAME)-dev"

# Cross-compile for different platforms
build-all:
	@echo "üåç Cross-compiling for multiple platforms..."
	@mkdir -p $(BUILD_DIR)
	
	# Linux AMD64
	GOOS=linux GOARCH=amd64 go build -o $(BUILD_DIR)/$(BINARY_NAME)-linux-amd64 .
	
	# macOS AMD64
	GOOS=darwin GOARCH=amd64 go build -o $(BUILD_DIR)/$(BINARY_NAME)-darwin-amd64 .
	
	# macOS ARM64 (Apple Silicon)
	GOOS=darwin GOARCH=arm64 go build -o $(BUILD_DIR)/$(BINARY_NAME)-darwin-arm64 .
	
	# Windows AMD64
	GOOS=windows GOARCH=amd64 go build -o $(BUILD_DIR)/$(BINARY_NAME)-windows-amd64.exe .
	
	@echo "‚úÖ Cross-compilation complete"
	@ls -la $(BUILD_DIR)/

# Show help
help:
	@echo "SassyShell TUI Build System"
	@echo ""
	@echo "Available targets:"
	@echo "  build      - Build the binary"
	@echo "  deps       - Install Go dependencies"
	@echo "  clean      - Clean build artifacts"
	@echo "  install    - Install binary to ~/.local/bin"
	@echo "  uninstall  - Remove installed binary"
	@echo "  test       - Run tests"
	@echo "  dev        - Build development version with race detection"
	@echo "  build-all  - Cross-compile for multiple platforms"
	@echo "  help       - Show this help message"
	@echo ""
	@echo "Quick start:"
	@echo "  make deps && make build"
	@echo "  ./build/$(BINARY_NAME) setup"
